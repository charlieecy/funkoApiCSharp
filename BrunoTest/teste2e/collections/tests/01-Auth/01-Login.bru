meta {
  name: 02-Login
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/Auth/signin
  body: json
  auth: none
}

body:json {
  {
    "username": "admin",
    "password": "admin"
  }
}

script:post-response {
  if (res.status === 200) {
    const body = res.getBody();
    if (body && body.token) {
      bru.setEnvVar("jwtToken", body.token);
    }
  }
}

assert {
  res.status: eq 200
  res.body.token: isString
  res.body.user: isJson
}
